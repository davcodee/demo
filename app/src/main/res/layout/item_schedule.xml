<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/itemScheduleHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:gravity="right|bottom"
                android:textSize="@dimen/textItemSchedule"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                />

           <TextView
               android:id="@+id/tvItemScheduleAMPM"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="AM"
               android:gravity="right|bottom"
               android:textColor="@color/colorPrimary"
               android:textSize="@dimen/textItemSchedule"
               />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"


            >

            <TextView
                android:id="@+id/tvNamePersonConference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nombre_conferencia"
                android:textSize="@dimen/textItemNameconference"
                android:textColor="@color/colorPrimary"
                android:ellipsize="end"
                android:lines="1"/>

            <TextView
                android:id="@+id/tvItemNameConference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:text="Nombre conferencista"
                android:ellipsize="end"
                android:lines="1"
                />

            <TextView
                android:id="@+id/tvItemTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#FFFFFF"
                android:background="@drawable/shape_topic"
                />


        </LinearLayout>

    </LinearLayout>





</LinearLayout>